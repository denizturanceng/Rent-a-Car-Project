@model Data_Entities.Concretes.Araclar
@{
    
    Layout = "~/Views/Shared/Calisan_Layout .cshtml";
}
<head>
    <title>Araç Ekleme</title>
</head>
<h2>Arac Ekleme</h2>

<div class="card-body">
    @using (Html.BeginForm("AracEkleme", "Calisanlar", FormMethod.Post))
    {
        <div class="input-group form-group">
            <input type="text" class="form-control" placeholder="Marka" name="aracMarka">
        </div>
        <div class="input-group form-group">
            <input type="text" class="form-control" placeholder="Model" name="aracModel">
        </div>
        <div class="input-group form-group">
            <input type="text" class="form-control" placeholder="Araç Yıl" name="aracYil">
        </div>
        <div class="input-group form-group">
            <input type="text" class="form-control" placeholder="Renk" name="aracRenk">
        </div>
        <div class="input-group form-group">
            <input type="text" class="form-control" placeholder="Koltuk Sayısı" name="aracKoltukSayisi">
        </div>
        <div class="input-group form-group">
            <input type="text" class="form-control" placeholder="Airbag" name="aracAirbag">
        </div>
        <div class="input-group form-group">
            <input type="text" class="form-control" placeholder="Başlangıç KM" name="aracBaslangicKM">
        </div>
        <div class="input-group form-group">
            <input type="text" class="form-control" placeholder="Günlük Fiyatı" name="aracGunlukFiyat">        
        </div>


        <div class="form-group">
            <input type="submit" value="Kaydet" class="btn float-right kaydet_btn">
        </div>
    }
</div>