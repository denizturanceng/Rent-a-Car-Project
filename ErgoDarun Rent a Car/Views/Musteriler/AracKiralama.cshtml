
@model Data_Entities.Concretes.Musteri
@{
    ViewBag.Title = "AracKiralama";
    Layout = "~/Views/Shared/Musteri_Layout .cshtml";
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <title>ErgoDarun Automobile | Araç Kirala</title>
</head>


<body>

    <div class="card-body">
        <form action="~/Musteriler/AracKiralama" method="post" class="form-shape needs-validation" novalidate>
            <div class="input-group form-group">
                @Html.TextBoxFor(x => x.musteriID, new { @class = "form-control", type = "text", required = "required", placeholder = "Müşteri Id'niz." })
            </div>
            <div class="row">
                <div class="input-group form-group col-md-6">
                    @Html.TextBoxFor(x => x.musteriKiraladigiAracID, new { @class = "form-control", type = "text", required = "required", placeholder = "Kiralamak istediğiniz aracın Id'si." })

                </div>

                <div class="form-group col-md-6">
                    @Html.TextBoxFor(x => x.musteriID, new { @class = "form-control", type = "text", required = "required", placeholder = "Kiralamak istediğiniz gün sayısı." })
                    <div class="invalid-feedback">Lütfen kiralamak istediğiniz gün sayısını giriniz.</div>
                </div>


            </div>
            <input type="submit" value="Kirala" class="btn btn-secondary bg-dark float-right login_btn">
        </form>
    </div>

    <nav class="nav justify-content-center nav-pills flex-column flex-md-row">
        <a class="nav-link active" href="#ekonomik" data-toggle="tab">Ekonomik</a>
        <a class="nav-link" href="#konfor" data-toggle="tab">Konfor</a>
        <a class="nav-link" href="#luks" data-toggle="tab">Lüks</a>
        <a class="nav-link" href="#kampanya" data-toggle="tab">Kampanya</a>
    </nav>

    <div class="tab-content py-5">

        <div class="tab-pane active" id="ekonomik">
            <h3>Ekonomik Araçlar</h3>
            @*BURAYA EKONOMIK ARAC KARTLARI GELECEK*@
        </div>

        <div class="tab-pane fade" id="konfor">
            <h3>Konfor Araçlar</h3>
            @*BURAYA KONFOR ARAC KARTLARI GELECEK*@
        </div>

        <div class="tab-pane fade" id="luks">
            <h3>Lüks Araçlar</h3>
            @*BURAYA LUKS ARAC KARTLARI GELECEK*@
        </div>

        <div class="tab-pane fade" id="kampanya">
            <h3>Kampanya Araçlar</h3>
            @*BURAYA KAMPANYA ARAC KARTLARI GELECEK*@
        </div>
    </div>

    <script src="~/Content/Scripts/signupValidation.js"></script>
</body>
</html>